{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

        <h3>{{ identity.Identify.repositoryName }}</h3>

    <ol>
        {% for prefix in metadataPrefixes %}
            <li>{{ prefix }}</li>
        {% endfor %}
    </ol>

    <h3>{{ recs.totalRecordCount }} Records</h3>
    <ol>
    {% for rec in recs|slice(0,6) %}
        <li>
            {{ dump(rec.metadata) }}
            {{ dump(rec) }}
        </li>
    {% endfor %}
    </ol>
{% endblock %}
